.clear {
  clear: both;
  zoom: 1;
}
.clear:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
picker,.picker{
  float: left; padding-left: 3%;width: 47%;
}
.section_item{
  width: 92%;
  position: relative;
  margin: 0 auto 40rpx;
  background: #eeeeee;
  padding: 2%;
  border: 1px solid #b1b1b1;
}
.section_item .item{
  float: left;
  width: 23%;
  text-align: center;
  margin: 10rpx 1% 10rpx;
}
.section_item .item .itemimg{
  width: 100%;
  height: 153rpx;
}
.section_item .item .itemname{
  width: 100%;
  color: #333;
  display: block;
  margin-top: -10rpx;
  font-size: 24rpx;
}


