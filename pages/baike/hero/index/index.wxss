.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #777;
}

.on {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.clear {
  clear: both;
  zoom: 1;
}
.clear:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.section_type{
  margin-bottom: 50rpx;
  height:65rpx;
  line-height: 65rpx;
}
.section_type .label-2{
  float: left;
  width: 33.3%;
  text-align: center;
}
.section_hero{
  width: 92%;
  position: relative;
  margin: 0 auto 40rpx;
  background: #eeeeee;
  padding: 2%;
  border: 1px solid #b1b1b1;
}
.section_hero .herotypeimg{
  position: absolute;
  left:50%;
  margin-left: -113rpx;
  top: -8rpx;
  width: 226rpx;
  height: 44rpx;
}

.section_hero .hero{
  float: left;
  width: 24%;
  text-align: center;
  margin: 10rpx 0.5% 10rpx;
}
.section_hero .hero .itemimg{
  width: 100%;
  height: 139rpx;
}
.section_hero .hero .itemname{
  width: 100%;
  background: #38393e;
  color: #fff;
  display: block;
  margin-top: -10rpx;
  font-size: 30rpx;
}
